{
    "name": "Tiny Blocker",
    "version": "2.0",
    "description": "A lightweight website blocker chrome extension",
    "permissions": [
        "storage",
        "declarativeNetRequest",
        "declarativeNetRequestWithHostAccess"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "128": "tinyBlockerIcon.png"
        }
    },
    "background": {
        "service_worker": "service-worker.js"
    },
    "options_page": "options.html",
    "icons": {
        "128": "tinyBlockerIcon.png"
    },
    "web_accessible_resources": [
        {
            "resources": ["blocked.html", "blocked.js", "tinyBlockerIcon.png"],
            "matches": ["<all_urls>"]
        }
    ],
    "manifest_version": 3
}